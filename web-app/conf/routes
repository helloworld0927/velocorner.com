# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# WEB
### NoDocs ###
GET     /                                        controllers.ApplicationController.index
### NoDocs ###
GET     /refresh                                 controllers.ApplicationController.refresh
### NoDocs ###
GET     /search                                  controllers.ApplicationController.search
### NoDocs ###
GET     /about                                   controllers.ApplicationController.about

# STRAVA AUTH
### NoDocs ###
GET     /login/strava                            controllers.auth.StravaController.login(scope: String)
### NoDocs ###
GET     /link/strava                             controllers.auth.StravaController.link(scope: String)
### NoDocs ###
GET     /authorize/strava                        controllers.auth.StravaController.authorize
### NoDocs ###
GET     /logout/strava                           controllers.auth.StravaController.logout

# WITHINGS AUTH
### NoDocs ###
GET     /login/withings                          controllers.auth.WithingsController.login(scope: String)
### NoDocs ###
GET     /authorize/withings                      controllers.auth.WithingsController.authorize

###
#  summary: Retrieves current year's statistics for the logged in athlete
#  responses:
#    200:
#      description: Returns the yearly statistics
#      schema:
#        $ref: '#/definitions/velocorner.model.Progress'
###
GET     /api/athletes/statistics                 controllers.ApiController.statistics

###
#  summary: List yearly series for the logged in athlete
#  responses:
#    200:
#      description: Returns the yearly series
#      schema:
#        $ref: '#/definitions/velocorner.highcharts.DailySeries'
#    404:
#      description: Not found
###
GET     /api/athletes/statistics/yearly/:action  controllers.ApiController.yearlyStatistics(action: String)

###
#  summary: List year to date series for the logged in athlete
#  responses:
#    200:
#      description: Returns the year to date series
#      schema:
#        $ref: '#/definitions/velocorner.highcharts.DailySeries'
#    404:
#      description: Not found
###
GET     /api/athletes/statistics/ytd/:action     controllers.ApiController.ytdStatistics(action: String)

###
#  summary: Suggests a list of activities based on the query parameter
#  responses:
#    200:
#      description: Returns a list of activities
#      schema:
#        $ref: '#/definitions/velocorner.model.strava.Activity'
###
GET     /api/activities/suggest                  controllers.ApiController.suggest(query: String)

###
#  summary: List all the distinct activity types for the logged in user. (Ride, Run, etc.)
#  responses:
#    200:
#      description: Returns a list of activity types ordered by frequency
###
GET     /api/activities/type                     controllers.ApiController.activityTypes

###
#  summary: Retrieves an activity
#  responses:
#    200:
#      description: Returns an activity based on id
#      schema:
#        $ref: '#/definitions/velocorner.model.strava.Activity'
#    403:
#      description: Forbidden
#    404:
#      description: Not found
#    500:
#      description: Internal error
###
GET     /api/activities/:id                      controllers.ApiController.activity(id: Int)

###
#  summary: Retrieves the weather forecast for a specific place
#  responses:
#    200:
#      description: Weather forecast for the next 5 days
#      schema:
#        $ref: '#/definitions/velocorner.model.DailyWeather'
#    400:
#      description: Bad request
#    404:
#      description: Place not found
#    500:
#      description: Internal error
###
GET     /api/weather/:location                   controllers.ApiController.weather(location: String)

###
#  summary: Retrieves the sunrise and sunset information for a specific place
#  responses:
#    200:
#      description: Sunrise, sunset
#      schema:
#        $ref: '#/definitions/velocorner.model.weather.SunriseSunset'
#    400:
#      description: Bad request
#    404:
#      description: Place not found
#    500:
#      description: Internal error
###
GET     /api/sunrise/:location                   controllers.ApiController.sunrise(location: String)

### NoDocs ###
GET     /ws                                      controllers.ApiController.ws

# DOC
### NoDocs ###
GET     /swagger.json                            controllers.Assets.at(path="/public", file="swagger.json")
### NoDocs ###
GET     /docs                                    controllers.Assets.at(path="/public", file="swagger-ui/index.html")

# Map static resources from the /public folder to the /assets URL path
### NoDocs ###
GET     /counter                                 controllers.Assets.at(path="/public", file="html/counter.html")
### NoDocs ###
GET     /assets/*file                            controllers.Assets.at(path="/public", file)
